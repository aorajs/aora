{
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "skipLibCheck": true,
      "target": "es2018",
      "jsx": "react",
      "paths": {
      }
    },
    "exclude": [
      "**/node_modules",
      "**/examples",
      "**/dist",
      "**/fixtures",
      "**/*.test.ts"
    ]
  }
  