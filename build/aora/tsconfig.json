{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2018",
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {},
    "outDir": "../../build/aora/dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
