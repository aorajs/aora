{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2018",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts"
  ]
}
