{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2018",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "src/cli/commands/.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
